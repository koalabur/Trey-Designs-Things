{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "next",
  "rules": {
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "indent": ["error", 2],
    "no-multi-spaces": ["error"],
    "comma-dangle": ["error", "only-multiline"],
    "semi": ["error", "always"],
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ]
  }
}
